{
    "require": {
        "php": ">=5.3.0",
        "wordpress": "3.8",
        "composer/installers": "~1.0",
        "fancyguy/webroot-installer": "1.0.0",
        "wpackagist/advanced-custom-fields": "*",
		"wpackagist/acf-field-date-time-picker": "*",
		"wpackagist/advanced-custom-fields-limiter-field": "*",
		"wpackagist/better-wp-security": "*",
		"wpackagist/p3-profiler": "*",
		"wpackagist/restricted-site-access": "*",
		"wpackagist/simple-page-ordering": "*",
		"wpackagist/w3-total-cache": "*",
		"wpackagist/debug-bar" : "*",
		"wpackagist/wp-permalauts": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "type": "webroot",
                "version": "3.8",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/3.8.zip"
                },
                "require": {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        }
    ],
    "extra": {
        "webroot-dir": "core",
        "webroot-package": "wordpress",
        "installer-paths": {
			"site/plugins/{$name}/": ["type:wordpress-plugin"]
		}

    }
}